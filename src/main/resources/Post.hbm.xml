<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.maxhayday.hibernate.model.Post" table="posts">
        <meta attribute="class-description">
            This class contains developer details.
        </meta>
        <id name="id" type="java.lang.Long" column="id">
            <generator class="native"/>
        </id>
        <property name="content" column="content" type="string"/>
        <property name="created" column="created" type="timestamp"/>
        <property name="updated" column="updated" type="timestamp"/>
        <property name="user_id" column="user_id" type="java.lang.Long"/>
    </class>

</hibernate-mapping>